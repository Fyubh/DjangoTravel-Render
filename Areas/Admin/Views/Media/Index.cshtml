@{
    ViewData["Title"] = "Media ‚Äî Upload";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var tripId = (int?)ViewBag.TripId;
    var files = ViewBag.Files as List<(string file, string url)> ?? new();
}

<h1 class="text-2xl font-bold mb-4">üì∏ Upload Photos</h1>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success whitespace-pre">@TempData["Success"]</div>
}

<form asp-action="Index" asp-controller="Media" asp-area="Admin" method="get" class="mb-4 d-flex gap-2">
    <input type="number" class="form-control" name="tripId" placeholder="Trip Id" value="@(tripId?.ToString() ?? "")" />
    <button class="btn btn-outline-secondary" type="submit">Open</button>
    <a asp-area="Admin" asp-controller="Media" asp-action="All" class="btn btn-outline-primary">All photos</a>
</form>

@if (tripId != null)
{
    <form asp-action="Upload" asp-controller="Media" asp-area="Admin" method="post" enctype="multipart/form-data" class="mb-4 border rounded p-3">
        <input type="hidden" name="tripId" value="@tripId" />
        <div class="mb-2">
            <input type="file" name="files" multiple class="form-control" accept="image/*" />
        </div>
        <button class="btn btn-primary" type="submit">Upload</button>
    </form>

    @if (files.Any())
    {
        <h2 class="h5 mb-3">Files for Trip #@tripId</h2>
        <div class="row g-3">
            @foreach (var f in files)
            {
                <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                    <div class="card">
                        <img src="@f.url" class="card-img-top" alt="">
                        <div class="card-body">
                            <div class="small text-truncate" title="@f.url">@f.file</div>
                            <div class="d-flex gap-2 mt-2">
                                <button class="btn btn-sm btn-outline-secondary" type="button"
                                        onclick="copyToClipboard('@f.url')">Copy URL</button>
                                <button class="btn btn-sm btn-outline-secondary" type="button"
                                        onclick="copyToClipboard('<img src=&quot;@f.url&quot; alt=&quot;&quot;>')">Copy &lt;img&gt;</button>
                            </div>
                            <form asp-action="Delete" asp-controller="Media" asp-area="Admin" method="post" class="mt-2">
                                <input type="hidden" name="tripId" value="@tripId" />
                                <input type="hidden" name="file" value="@f.file" />
                                <button class="btn btn-sm btn-outline-danger" type="submit">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-muted">–í —ç—Ç–æ–π –ø–æ–µ–∑–¥–∫–µ –ø–æ–∫–∞ –Ω–µ—Ç —Ñ–∞–π–ª–æ–≤.</div>
    }
}

@section Scripts {
<script>
function copyToClipboard(text) {
  navigator.clipboard.writeText(text)
    .then(()=> alert('Copied!'))
    .catch(()=> alert('Cannot copy'));
}
</script>
}
